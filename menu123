					<div class="menu-container">
			        <button class="menu-toggle">‚â°</button>
			        <div class="menu-items">
			            <div class="menu-item" data-submenu="empresa">
			                üè¢<span>Empresa</span>
			            </div>
			            <!-- Submenu Empresa -->
			            <div class="submenu" id="submenu-empresa">
			                <div class="submenu-item">‚ÑπÔ∏è<span>Sobre</span></div>
			                <div class="submenu-item">üéØ<span>Miss√£o</span></div>
			                <div class="submenu-item">‚≠ê<span>Valores</span></div>
			            </div>
			
			            <div class="menu-item" data-submenu="relatorios">
			                üìä<span>Relat√≥rios</span>
			            </div>  
			            <!-- Submenu Relat√≥rios -->
			            <div class="submenu" id="submenu-relatorios">
			                <div class="submenu-item">üí∞<span>Vendas</span></div>
			                <div class="submenu-item">üìà<span>Financeiro</span></div>
			            </div>
			
			            <div class="menu-item">üìã<span>Tarefas</span></div>
			            <div class="menu-item">üë§<span>Perfil</span></div>
			            <div class="menu-item">üìÖ<span>Agenda</span></div>
			            <div class="menu-item">‚úâÔ∏è<span>E-mail</span></div>
			            <div class="menu-item">üìû<span>Contato</span></div>
			            <div class="menu-item">‚öôÔ∏è<span>Config</span></div>
			        </div>
			    </div>
			
			    <script>
			        const menuContainer = document.querySelector('.menu-container');
			        const menuToggle = document.querySelector('.menu-toggle');
			        const menuItemsContainer = document.querySelector('.menu-items');
			        const menuItems = document.querySelectorAll('.menu-item');
			        const submenus = document.querySelectorAll('.submenu');
			
			        // Toggle do menu principal
			        menuToggle.addEventListener('click', (e) => {
			            e.stopPropagation();
			            // Se o menu est√° aberto com submenu, volta ao menu principal
			            if (menuItemsContainer.classList.contains('submenu-active')) {
			                menuContainer.classList.remove('active');
			                setTimeout(() => {
			                    menuContainer.classList.add('active');
			                    menuItemsContainer.classList.remove('submenu-active');
			                    submenus.forEach(submenu => submenu.classList.remove('active'));
			                }, 400); // Tempo igual √† dura√ß√£o da anima√ß√£o
			            } else {
			                // Alterna o menu principal
			                menuContainer.classList.toggle('active');
			                menuItemsContainer.classList.remove('submenu-active');
			                submenus.forEach(submenu => submenu.classList.remove('active'));
			            }
			        });
			
			        // Abre submenu ao clicar em um item
			        menuItems.forEach(item => {
			            item.addEventListener('click', (e) => {
			                e.stopPropagation();
			                const submenuId = item.getAttribute('data-submenu');
			
			                if (submenuId) {
			                    // Fecha o menu principal temporariamente para anima√ß√£o
			                    menuContainer.classList.remove('active');
			                    // Aguarda a anima√ß√£o de fechamento antes de abrir o submenu
			                    setTimeout(() => {
			                        menuContainer.classList.add('active');
			                        menuItemsContainer.classList.add('submenu-active');
			                        submenus.forEach(submenu => submenu.classList.remove('active'));
			                        const submenu = document.getElementById(`submenu-${submenuId}`);
			                        if (submenu) {
			                            submenu.classList.add('active');
			                        }
			                    }, 400); // Tempo igual √† dura√ß√£o da anima√ß√£o
			                }
			            });
			        });
			
			        // Fecha tudo ao clicar fora
			        document.addEventListener('click', (e) => {
			            if (!menuContainer.contains(e.target)) {
			                menuContainer.classList.remove('active');
			                menuItemsContainer.classList.remove('submenu-active');
			                submenus.forEach(submenu => submenu.classList.remove('active'));
			            }
			        });
			
			        // Volta ao menu principal ao clicar em um subitem
			        document.querySelectorAll('.submenu-item').forEach(subitem => {
			            subitem.addEventListener('click', (e) => {
			                e.stopPropagation();
			                console.log(`Clicou em: ${subitem.querySelector('span').textContent}`);
			                // Fecha o submenu temporariamente para anima√ß√£o
			                menuContainer.classList.remove('active');
			                setTimeout(() => {
			//                     menuContainer.classList.add('active');
			                    menuItemsContainer.classList.remove('submenu-active');
			                    submenus.forEach(submenu => submenu.classList.remove('active'));
			                }, 400); // Tempo igual √† dura√ß√£o da anima√ß√£o
			            });
			        });
			    </script>
